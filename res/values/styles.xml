<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

	<style name="MainMenuButton">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">#ffffff</item>
		<item name="android:background">@drawable/main_menu_button_border</item>
		<item name="android:layout_margin">5dp</item>
	</style>
	
	<style name="SeekBar">
	    <item name="android:progressDrawable">
	       @drawable/seekbar_border
	    </item>
	    <item name="android:thumb">
	       @drawable/seek_thumb
	    </item>
	</style>
	
	<style name="CheckBox">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">#ffffff</item>
		<item name="android:button">@drawable/checkbox_border</item>
		<item name="android:layout_margin">5dp</item>
	</style>
	
	<style name="RadioButton">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">#ffffff</item>
		<item name="android:button">@drawable/radiobutton_border</item>
		<item name="android:layout_margin">5dp</item>
	</style>
	
    <style name="Dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="DialogText">
        <item name="android:textSize">12sp</item>
    </style> 
    <style name="DialogText.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
